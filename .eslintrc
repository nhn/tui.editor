{
  "extends": [
    "tui"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "classes": true,
      "spread": true,
      "defaultParams": true,
      "destructuring": true
    }
  },
  "env":{
    "es6": true,
    "amd": true
  },
  "rules": {
    "linebreak-style": 0,
    "max-len": [2, {"code": 120, "tabWidth": 4, "ignoreStrings": true, "ignoreComments": true, "ignoreRegExpLiterals": true, "ignoreTemplateLiterals": true}],
    "no-sync": 0,
    "indent": ["error", 2]
  }
}
