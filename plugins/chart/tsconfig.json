{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonJS",
    "allowJs": true,
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "noEmit": true,
    "paths": {
      "@/*": ["src/*"],
    },
    "typeRoots": ["./types", "node_modules/@types"],
    "lib": ["esnext", "dom", "dom.iterable"]
  },
  "include": ["src/**/*.ts", "src/**/*.js", "types/**/*"],
  "exclude": ["node_modules"],
}
