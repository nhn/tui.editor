{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*.ts", "src/**/*.js", "types/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@t/*": ["types/*"]
    },
    "typeRoots": ["./types", "node_modules/@types", "../../node_modules/@types"],
    "lib": ["esnext", "dom", "dom.iterable"]
  }
}