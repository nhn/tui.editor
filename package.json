{
  "name": "tui-editor",
  "version": "0.12.8",
  "private": true,
  "author": "Sungho Kim <shirenbeat@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.0",
    "babel-loader": "^6.2.7",
    "babel-plugin-istanbul": "^2.0.3",
    "babel-preset-es2015": "^6.18.0",
    "concat-cli": "^4.0.0",
    "cpy-cli": "^1.0.1",
    "csslint": "^1.0.4",
    "del-cli": "^0.2.0",
    "eslint": "3.7.1",
    "tui-jsdoc-template": "^1.0.4",
    "jasmine-core": "^2.5.2",
    "jsdoc": "^3.4.3",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-jasmine-ajax": "^0.1.13",
    "karma-jasmine-jquery": "^0.1.1",
    "karma-junit-reporter": "^1.1.0",
    "karma-narrow-reporter": "^2.0.1",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webdriver-launcher": "git+https://github.com/everedifice/karma-webdriver-launcher.git",
    "karma-webpack": "^1.8.0",
    "uglify-js": "^2.7.4",
    "webpack": "^1.13.3",
    "webpack-dev-server": "^1.16.2"
  },
  "scripts": {
    "doc": "jsdoc -c jsdoc-conf.json -t ./node_modules/tui-jsdoc-template",
    "test": "NODE_ENV=DEV karma start karma.conf.js",
    "testwd": "NODE_ENV=DEV karma start karma.conf.ne.js",
    "coverage": "NODE_ENV=coverage karma start karma.conf.ne.js",
    "dev": "node develop",
    "eslint": "eslint src/js",
    "csslint": "csslint src/css --quiet --ignore=adjoining-classes,important,box-sizing,box-model,overqualified-elements,qualified-headings,unique-headings,display-property-grouping,order-alphabetical,universal-selector,outline-none,font-sizes",
    "clean": "rm -rf dist",
    "build:uglifyjs": "uglifyjs dist/tui-editor.js -o dist/tui-editor.min.js",
    "build:concatJs": "concat-cli -f lib/tui-component-colorpicker/dist/colorpicker.min.js dist/tui-editor-core.js -o dist/tui-editor.js && del dist/tui-editor-core.js",
    "build:copyCss": "cpy src/css/tui-editor-contents.css dist",
    "build:concatCss": "concat-cli -f src/css/tui-editor.css lib/tui-component-colorpicker/dist/colorpicker.css -o dist/tui-editor.css",
    "build": "npm run clean && npm run eslint && npm run csslint && webpack && npm run build:concatJs && npm run build:uglifyjs && npm run build:copyCss && npm run build:concatCss"
  }
}
